<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_film_to_other_collection_recycler_view_item_height"
    android:background="@drawable/stroke_light_grey">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/bottom_dialog_add_to_collection_check_box"
        style="@style/AddToOtherCollectionCheckBoxStyle"
        android:layout_width="@dimen/add_film_to_other_collection_recycler_view_item_height"
        android:layout_height="@dimen/add_film_to_other_collection_recycler_view_item_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/double_start_end_margin" />

    <TextView
        android:id="@+id/bottom_dialog_add_to_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/start_end_margin"
        android:layout_toEndOf="@+id/bottom_dialog_add_to_collection_check_box"
        android:maxWidth="200dp"
        android:textAppearance="@style/MainTextStyle"
        tools:text="Любимое кино" />

    <TextView
        android:id="@+id/bottom_dialog_add_to_collection_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/start_end_margin"
        android:textAppearance="@style/AdditionalTextStyle"
        tools:ignore="RelativeOverlap"
        tools:text="4" />
</RelativeLayout>