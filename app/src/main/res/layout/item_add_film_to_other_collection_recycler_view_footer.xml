<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_film_to_other_collection_recycler_view_item_height"
    android:background="@drawable/stroke_light_grey"
    android:id="@+id/bottom_dialog_add_to_collection_footer_item">


    <ImageView
        android:id="@+id/bottom_dialog_add_to_collection_footer_icon"
        android:layout_width="@dimen/add_film_to_other_collection_recycler_view_item_height"
        android:layout_height="@dimen/add_film_to_other_collection_recycler_view_item_height"
        style="@style/BackButtonStyle"
        android:contentDescription="@string/bottom_dialog_add_to_collection_footer_icon_description"
        android:src="@drawable/icon_plus"
        android:scaleType="center"
        android:layout_marginStart="@dimen/double_start_end_margin"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_end_margin"
        android:text="@string/bottom_dialog_add_to_collection_footer_text"
        android:textAppearance="@style/MainTextStyle"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bottom_dialog_add_to_collection_footer_icon"/>
</RelativeLayout>