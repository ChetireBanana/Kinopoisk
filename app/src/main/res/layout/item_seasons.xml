<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_season_series_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MainTextStyle"
        tools:text="1 Серия, Введение" />

    <TextView
        android:id="@+id/item_season_series_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallest_gap"
        android:textAppearance="@style/AdditionalTextStyle"
        tools:text="26 марта 2002" />
</LinearLayout>